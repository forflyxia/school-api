<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                            http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="dalDataSourceFactory" class="com.ctrip.datasource.configure.DalDataSourceFactory"/>

    <bean name="pkgProductDB" factory-bean="dalDataSourceFactory" factory-method="createDataSource">
        <constructor-arg name="allInOneKey" value="PkgProductDB_INSERT_2"/>
        <constructor-arg name="svcUrl" value="https://ws.titan.fws.qa.nt.ctripcorp.com/titanservice/query"/>
    </bean>

    <bean name="multipleDataSource" class="com.xstudio.school.service.datasource.MultipleDataSource">
        <property name="defaultTargetDataSource" ref="pkgProductDB" />
        <property name="targetDataSources">
            <map>
                <entry key="pkgproductdb" value-ref="pkgProductDB" />
            </map>
        </property>
    </bean>

    <bean name="multipleDBFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="multipleDataSource"/>
        <property name="mapperLocations" value="classpath:mybatis/mappers/**/*Mapper.xml"/>
    </bean>

    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="annotationClass" value="org.springframework.stereotype.Repository"/>
        <property name="basePackage" value="com.xstudio.school.repository.school.mapper"/>
        <property name="sqlSessionFactory" ref="multipleDBFactory"/>
    </bean>

</beans>